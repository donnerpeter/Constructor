package cons2

/**
 * @author peter
 */
class Parser {
  Language language

  def Parser(language) {
    this.language = language;
  }

  Chart parse(String text) {
    def chart = new Chart(language)
    def words = text.split(" ")

    for (w in words) {
      chart.newFrame(['phon', w])
      chart.update()
    }

    chart.wrapUp()


    return chart
  }

}
