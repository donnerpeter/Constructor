package cons3

import static SonnetTest.doTranslateTest

import junit.framework.TestCase
import static cons3.SonnetTest.doParseTest

/**
 * @author peter
 */
class SonnetVariationsTest extends TestCase {

  public void test3_Short() throws Exception {
    doTranslateTest "Каково же было их и мое удивление",
                    "Great was their and my amazement"
  }

  public void test3_My() throws Exception {
    doTranslateTest "Каково же было мое удивление",
                    "Great was my amazement"
  }
  public void test3_Their() throws Exception {
    doTranslateTest "Каково же было их удивление",
                    "Great was their amazement"
  }

  public void test1_789() throws Exception {
    doParseTest "Я забыл, что идёт раньше - 7, 8 или 9", """
A.type=ME
B.type=FORGET
#1.time=PAST
B.arg1=A
B.theme=#2
--
#2.questioned=A
#2.time=PRESENT
B.type=COME_SCALARLY
B.order=EARLIER
B.arg1=A
C.type=7
C.number=true
A.variants=D
D.member=C
E.type=8
E.number=true
D.member=E
D.conj=or
F.type=9
F.number=true
D.member=F
"""
  }

  public void test1_789_Translation() throws Exception {
    doTranslateTest "Я забыл, что идёт раньше - 7, 8 или 9.", "I forgot what comes first - 7, 8 or 9."
  }

  public void test4_123TheyRemember() throws Exception {
    doParseTest "1, 2 и 3 они помнят", """
A.type=1
A.number=true
B.type=2
B.number=true
C.member=A
C.member=B
C.conj=and
D.type=3
D.number=true
C.member=D
E.type=THEY
F.type=REMEMBER
#1.time=PRESENT
F.arg2=C
F.arg1=E
"""
  }

  public void test4_TheyRemember123() throws Exception {
    doParseTest "Они помнят 1, 2 и 3", """
A.type=THEY
B.type=REMEMBER
#1.time=PRESENT
B.arg1=A
C.type=1
C.number=true
B.arg2=C
D.type=2
D.number=true
E.member=C
E.member=D
B.arg2=E
E.conj=and
F.type=3
F.number=true
E.member=F
"""
  }

  public void test4_4() throws Exception {
    doParseTest "2 и 3 они помнят, а 4 забыли", """
A.type=2
A.number=true
B.conj=and
C.type=3
C.number=true
B.member=A
B.member=C
D.type=THEY
E.type=REMEMBER
#1.time=PRESENT
E.arg2=B
E.arg1=D
#1.but=#2
--
A.type=4
A.number=true
B.type=FORGET
#2.time=PAST
B.arg2=A
C.type=THEY
B.arg1=C
"""
  }

  public void test4_45() throws Exception {
    doParseTest "2 и 3 они помнят, а 4 и 5 забыли", """
A.type=2
A.number=true
B.conj=and
C.type=3
C.number=true
B.member=A
B.member=C
D.type=THEY
E.type=REMEMBER
#1.time=PRESENT
E.arg2=B
E.arg1=D
#1.but=#2
--
A.type=4
A.number=true
B.conj=and
C.type=5
C.number=true
B.member=A
B.member=C
D.type=FORGET
#2.time=PAST
D.arg2=B
E.type=THEY
D.arg1=E
"""
  }

  public void test4_TheyForgot45() throws Exception {
    doParseTest "Они забыли 4 и 5", """
A.type=THEY
B.type=FORGET
#1.time=PAST
